{
    "name": "stratoserp/stratos-drupal-project",
    "description": "Project template for StratosERP",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        { "name": "Simon Lindsay (singularo)", "role": "Developer" }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.drupal.org/8", "exclude": ["drupal/stratoserp"] },
        { "type": "composer", "url": "https://asset-packagist.org" },
        { "type": "vcs", "url": "https://github.com/singularo/shepherd-drupal-scaffold.git" },
        { "type": "vcs", "url": "https://github.com/stratoserp/stratoserp_base.git" },
        { "type": "vcs", "url": "https://github.com/stratoserp/stratoserp.git" }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-mbstring": "*",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/core": "^9.3",
        "drupal/core-composer-scaffold": "^9.3",
        "drush/drush": "^10",
        "drupal/bootstrap4": "^2.1",
        "singularo/shepherd-drupal-scaffold": "dev-develop",
        "stratoserp/stratoserp": "dev-develop",
        "stratoserp/stratoserp_base": "dev-develop",
        "vlucas/phpdotenv": "^5.1",
        "webflo/drupal-finder": "^1.2"
    },
    "require-dev": {
        "drupal/core-dev": "^9",
        "zaporylie/composer-drupal-optimizations": "^1.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": true,
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "allowed-packages": [
                "singularo/shepherd-drupal-scaffold"
            ]
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "preserve-paths": [
            "web/sites"
        ],
        "patches-file": "composer.patches.json",
        "patchLevel": {
            "drupal/core": "-p2"
        }
    }
}
