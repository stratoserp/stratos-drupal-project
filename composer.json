{
    "name": "stratoserp/stratos-drupal-project",
    "description": "Project template for StratosERP",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        { "name": "Simon Lindsay (singularo)", "role": "Developer" }
    ],
    "repositories": [
        { "type": "composer", "url": "https://packages.drupal.org/8", "exclude": ["stratoserp/stratoserp"] },
        { "type": "composer", "url": "https://asset-packagist.org" },
        { "type": "path", "url": "~/projects/singularo/shepherd-drupal-scaffold", "options": { "symlink": false } }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "ext-mbstring": "*",
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.7",
        "drupal/core": "^9.4",
        "drupal/date_popup": "^1.1",
        "drupal/memcache": "^2.4",
        "drupal/views_data_export": "^1.1",
        "drupal/webform_views": "^5.0@alpha",
        "drush/drush": "^11",
        "stratoserp/stratoserp": "dev-develop",
        "stratoserp/stratoserp_base": "dev-develop"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/config_devel": "^1.9",
        "drupal/core-dev": "^9.4",
        "drupal/drupal-extension": "^4.1",
        "fakerphp/faker": "^1.17",
        "mglaman/drupal-check": "^1.2",
        "mglaman/phpstan-drupal": "^1.1",
        "palantirnet/drupal-rector": "^0.12.0",
        "phpmd/phpmd": "^2.6",
        "phpspec/prophecy-phpunit": "^2",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpunit/phpunit": "^9.3.10",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^3.3",
        "weitzman/drupal-test-traits": "^1.5",
        "zaporylie/composer-drupal-optimizations": "^1.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "discard-changes": "stash",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "cweagans/composer-patches": true,
            "oomphinc/composer-installers-extender": true,
            "singularo/shepherd-drupal-scaffold": true,
            "zaporylie/composer-drupal-optimizations": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "preferred-install": {
            "stratoserp/*": "source",
            "singularo/*": "source",
            "drupal/*": "source"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "allowed-packages": [
                "singularo/shepherd-drupal-scaffold"
            ],
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"]
        },
        "preserve-paths": [
            "web/sites"
        ],
        "patches-file": "composer.patches.json",
        "patchLevel": {
            "drupal/core": "-p2"
        }
    },
    "autoload": {
        "psr-4": {
            "StratosERP\\": "src/"
        }
    }
}
